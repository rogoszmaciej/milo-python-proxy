{

    "manifest_version": 2,
    "name": "Request Headers Tab ID",
    "version": "1.0",
    "description": "Adds current tab ID to request headers",

    "background": {
        "scripts": ["headers.js"],
        "persistent": true
    },

    "page_action": {
        "default_icon": {
            "48": "icons/icon_48.png",
            "96": "icons/icon_96.png"
        }
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs"
    ]

}